<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/wetter_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/wetter_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GeoWeather">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DonateActivity" />
        <activity android:name=".OxaPayActivity" />
        <activity android:name=".CoinbaseActivity" />
        <activity android:name=".EthereumActivity" />
        <activity android:name=".BitcoinActivity" />
        <meta-data android:name="osmdroid.basePath" android:value="osmdroid" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.freetime.geoweather.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>