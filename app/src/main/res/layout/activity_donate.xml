<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:rotationX="0">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtDonateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Support my work"
        android:textColor="#222"
        android:textSize="24sp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtDonateDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="If you like the app, I would be happy about a little support and if you are in my Discord then you can enter your Discord Name"
        android:textColor="#555"
        android:textSize="16sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonateOxa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Donate now via OxaPay"
        android:textColor="#FFFFFF"
        app:icon="@drawable/oxa"
        app:iconGravity="textStart" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonateCoin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Donate now via Coinbase"
        android:textColor="#FFFFFF"
        app:icon="@drawable/coinbase"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonateBTC"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Donate Bitcoin"
        android:textColor="#FFFFFF"
        app:icon="@drawable/btc"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonateETH"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Donate Ethereum"
        android:textColor="#FFFFFF"
        app:icon="@drawable/eth"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonateUSDT"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Donate Tether/USDT"
        android:textColor="#FFFFFF"
        app:icon="@drawable/usdt"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonateUSDC"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Donate USDC"
        android:textColor="#FFFFFF"
        app:icon="@drawable/usdc"
        app:iconGravity="textStart"/>
        
        <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonateSHIB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Donate ShibaInu"
        android:textColor="#FFFFFF"
        app:icon="@drawable/shib"
        app:iconGravity="textStart"/>

        <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonateDOGE"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Donate Dogecoin"
        android:textColor="#FFFFFF"
        app:icon="@drawable/doge"
        app:iconGravity="textStart"/>

        <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonateTRON"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Donate Tron"
        android:textColor="#FFFFFF"
        app:icon="@drawable/tron"
        app:iconGravity="textStart"/>

        <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDonateLTC"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Donate Litecoin"
        android:textColor="#FFFFFF"
        app:icon="@drawable/ltc"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoBack"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Go Back to the Weather Dashboard"
        android:textColor="#FFFFFF" />
</LinearLayout>